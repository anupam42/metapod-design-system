{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@metapod-design-system/colors": ["packages/colors/src/index.ts"],
      "@metapod-design-system/docs": ["packages/docs/src/index.ts"],
      "@metapod-design-system/icons": ["packages/icons/src/index.ts"],
      "@metapod-design-system/kakuna": ["packages/kakuna/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
